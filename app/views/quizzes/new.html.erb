<% provide(:title, "Quiz") %>

{{ question }}

 <div class="quiz-form")
    <ol>
        <li ng-repeat="answer in answers"><input type="radio" name="answers" value={{answer.value}} ng-model="radios.selected" />{{answer.value}}. {{answer.text}}</li>
    </ol>
    
    <%= hidden_field_tag :user_id, { :value => current_user.id } %>
    <button class="btn" ng-click="nextStep()">Continue</button>
</div>